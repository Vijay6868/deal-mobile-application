<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="secButton">
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
        <item name="textFillColor">@color/sec_color</item>
        <item name="strokeColor">@color/sec_color</item>
    </style>
    <style name="label_color">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lb_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="label_heading">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="et_Text">
        <item name="hintTextColor">@color/et_hint</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="backButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:src">@drawable/backButton</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="CardImage" parent="Widget.AppCompat.ImageButton">
        <item name="android:scaleType">centerInside</item>
    </style>

</resources>